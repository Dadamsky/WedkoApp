<Window x:Class="WedkoApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:WedkoApp"
        Title="Aplikacja CRUD" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Logowanie" FontSize="20" Margin="0 0 0 20" />
            <StackPanel Orientation="Horizontal" Margin="0 0 0 10">
                <TextBlock Text="Nazwa użytkownika:" VerticalAlignment="Center" Margin="0 0 10 0" />
                <TextBox x:Name="txtUsername" Width="200" />
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0 0 0 10">
                <TextBlock Text="Hasło:" VerticalAlignment="Center" Margin="0 0 46 0" />
                <PasswordBox x:Name="txtPassword" Width="200" />
            </StackPanel>
            <Button Content="Zaloguj" Click="ZalogujButton_Click" Width="100" />
        </StackPanel>
    </Grid>
</Window>
